@using BarberShop.Models

@{
    ViewBag.Title = "Thêm Mới Dịch Vụ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="form-container">
    <h1>Thêm Mới Dịch Vụ</h1>
    @using (Html.BeginForm("ThemMoi", "DichVu", FormMethod.Post))
    {
        <div class="form-group">
            <label for="name">Tên Dịch Vụ:</label>
            <input type="text" id="name" name="TenDichVu" placeholder="Tên dịch vụ..." required>
        </div>

        <div class="form-group">
            <label for="name">Đơn Giá:</label>
            <input type="number" id="name" name="DonGia" placeholder="100000" required>
        </div>

        <div class="form-group">
            <label for="name">Thời Gian (phút):</label>
            <input type="number" id="name" name="ThoiGian" placeholder="100000" required>
        </div>

        <div class="form-group">
            <button type="submit" class="btn">Thêm</button>
        </div>
    }
</div>
