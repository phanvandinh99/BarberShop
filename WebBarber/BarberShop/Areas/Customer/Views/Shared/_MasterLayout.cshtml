<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <!-- JavaScript jquery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <!-- CSS toastr -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <!-- JavaScript toastr -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <style>
        * {
            margin: 0;
            padding: 0;
            font-family: "Poppins", sans-serif;
            box-sizing: border-box;
        }

        body {
            background-color: whitesmoke;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .header {
            background-color: black;
            width: 100%;
            position: fixed;
            top: 0;
            left: 0;
            padding: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            z-index: 1000;
        }

        .logo {
            width: 140px;
            position: absolute;
            top: 4%;
            left: 5%;
        }

        #navigation {
            width: 200px;
            height: 100vh;
            position: fixed;
            right: -200px;
            top: 0;
            background: #CC6633;
            z-index: 2;
            transition: 0.5s;
        }

        nav ul li {
            list-style: none;
            margin: 50px 20px;
        }

            nav ul li a {
                text-decoration: none;
                color: white;
                font-weight: bold;
            }

        #menubtn {
            width: 50px;
            height: 50px;
            background: #CC6633;
            text-align: center;
            position: fixed;
            right: 30px;
            top: 20px;
            z-index: 3;
            cursor: pointer;
            border-radius: 3px;
        }

            #menubtn img {
                width: 20px;
                margin: 15px;
            }

        .content {
            padding-top: 80px; /* Add padding to prevent overlap with header */
            padding-bottom: 60px; /* Add padding to prevent overlap with footer */
            flex: 1;
        }

        .footer {
            background-color: #333;
            color: #fff;
            padding: 20px;
            text-align: center;
            width: 100%;
            bottom: 0;
            left: 0;
            z-index: 1000;
        }

        .footer-content {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
            padding-bottom: 10px;
            border-bottom: 1px solid #555;
        }

        .footer-section {
            margin: 10px 0;
        }

            .footer-section p {
                margin: 5px 0;
                color: #fff;
            }

        .contact-info p {
            color: #d2a679;
        }

        .social-icons a {
            margin: 0 10px;
            color: #fff;
            text-decoration: none;
            font-size: 1.5em;
        }

            .social-icons a:hover {
                color: #d2a679;
            }

        .gallery {
            display: flex;
            flex-wrap: wrap;
            width: 100%;
            justify-content: center;
            align-items: center;
            margin: 50px 0;
        }

        .content-pro {
            width: 15%;
            margin: 18px;
            box-sizing: border-box;
            float: left;
            text-align: center;
            border-radius: 20px;
            cursor: pointer;
            padding-top: 10px;
            padding-bottom: 10px;
            box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);
            transition: .4s;
            background: #f2f2f2;
        }

            .content-pro:hover {
                box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
                transform: translate(0px, -8px);
            }

        .pic {
            width: 70%;
            height: auto;
            text-align: center;
            margin: 0 auto;
            display: block;
        }

        h6 {
            font-size: 1vw;
            text-align: center;
            color: #222f3e;
            margin: 0;
        }

        h2 {
            font-size: 1.5vw;
            text-align: center;
            color: #222f3e;
            margin: 0;
        }

        .sp {
            text-align: center;
            color: #b2bec3;
            padding-top: 0 8px;
        }

        .buy-1 {
            color: black;
            background-color: dimgrey;
            width: 50%;
            padding: 10px;
            border: 0;
            outline: none;
            cursor: pointer;
            margin-top: 5px;
            border-radius: 50px;
        }

            .buy-1:hover {
                background-color: coral;
            }

        b {
            font-size: 1vw;
        }
    </style>
</head>
<body>
    <div class="header">
        <section id="logo">
            <a href="~/Customer/Home/Index">
                <img src="~/Images/logo.png" />
            </a>
        </section>
        <div id="navigation">
            <nav>
                <ul>
                    <li><a href="#banner">Trang chủ</a></li>
                    <li><a href="#aboutus">Giới thiệu</a></li>
                    <li><a href="#">Đánh giá</a></li>
                    <li><a href="~/Home/Contact">Liên hệ</a></li>
                    <li><a href="#service">Dich vu</a></li>
                    <li><a href="#product">San pham</a></li>
                </ul>
            </nav>
        </div>
        <div id="menubtn">
            <img src="~/Images/menu.png" />
        </div>
    </div>

    <div class="content">
        @RenderBody()
    </div>

    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section opening-hours">
                <p>Thời gian mở cửa</p>
                <p>8h30 - 20h30 (Mỗi ngày)</p>
            </div>
            <div class="footer-section contact-info">
                <p>barbershop@gmail.com</p>
                <p>1234567-0934519005</p>
            </div>
            <div class="footer-section social-icons">
                <a href="#" target="_blank"><i class="fab fa-facebook"></i></a>
                <a href="#" target="_blank"><i class="fab fa-twitter"></i></a>
                <a href="#" target="_blank"><i class="fab fa-youtube"></i></a>
            </div>
        </div>
    </footer>

    <script>
        var menubtn = document.getElementById('menubtn');
        var navigation = document.getElementById('navigation');
        navigation.style.right = "-200px";
        menubtn.onclick = function () {
            if (navigation.style.right === "-200px") {
                navigation.style.right = "0";
            } else {
                navigation.style.right = "-200px";
            }
        }
    </script>

    <script>
        $(document).ready(function () {
            var toastMessage = '@TempData["ToastMessage"]';

            if (toastMessage) {
                var parts = toastMessage.split('|');
                if (parts.length === 2) {
                    var toastType = parts[0];
                    var message = parts[1];

                    switch (toastType) {
                        case 'success':
                            toastr.success(message);
                            break;
                        case 'error':
                            toastr.error(message);
                            break;
                        case 'info':
                            toastr.info(message);
                            break;
                        case 'warning':
                            toastr.warning(message);
                            break;
                    }
                }
            }
        });
    </script>
</body>
</html>
