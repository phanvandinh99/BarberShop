﻿@using BarberShop.Models
@model List<SanPham>

@{
    ViewBag.Title = "Danh Sách Sản Phẩm";
    Layout = "~/Areas/Customer/Views/Shared/_MasterLayout.cshtml";
}

<html>
<head>
    <link rel="stylesheet" href="~/Styles/style.css" />
</head>

<body>
    <!--Code Sản Phẩm-->
    <section id="product">
        <div class="title-text">
            <p>SẢN PHẨM</p>

            <div class="gallery">
                @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <div class="content-pro">
                                <a href="/Customer/SanPham/ChiTietSanPham?iMaSanPham=@item.MaSanPham" style="text-decoration:none">
                                    <img class="pic" src="~/Images/Hard-wax.jpg" />
                                    <h2>@item.TenSanPham</h2>
                                    <h6>@string.Format("{0:0,0}", item.GiaBan) vnđ</h6>
                                </a>
                                <button class="buy-1"><b>Mua</b></button>
                            </div>
                        }
                    }
            </div>
        </div>
    </section>
    <!--Code Sản Phẩm-->
</body>
</html>

