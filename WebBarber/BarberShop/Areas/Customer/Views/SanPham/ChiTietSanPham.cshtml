@using BarberShop.Models
@model SanPham

@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Areas/Customer/Views/Shared/_MasterLayout.cshtml";
}

<style>
    .product-details-container {
        display: flex;
        gap: 20px;
        margin: 20px;
    }

    /* Left: Image section */
    .product-image {
        flex: 1;
        text-align: center;
    }

        .product-image img {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
        }

    /* Right: Product information section */
    .product-info {
        flex: 2;
    }

        .product-info h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .product-info p {
            font-size: 16px;
            margin-bottom: 10px;
        }

        .product-info h3 {
            font-size: 20px;
            color: #e74c3c;
            margin-bottom: 20px;
        }

    /* Button styling */
    .add-to-cart-btn {
        padding: 10px 20px;
        background-color: #3498db;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }

        .add-to-cart-btn:hover {
            background-color: #2980b9;
        }

    /* Quantity input styling */
    .quantity-input {
        width: 80px;
        padding: 5px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-bottom: 20px;
    }
</style>

<div class="product-details-container">
    <!-- Left: Image Section -->
    <div class="product-image">
        <img src="@Url.Content("~/Images/ClayWax.jpg")" alt="Hình ảnh sản phẩm">
    </div>

    <!-- Right: Product Information Section -->
    <div class="product-info">
        <h2><strong>Tên sản phẩm:</strong> @Model.TenSanPham</h2>
        <p><b>Giá bán:</b> @string.Format("{0:0,0}", Model.GiaBan) vnđ</p>
        <p><b>Kho:</b> @Model.SoLuong sản phẩm</p>
        <p><b>Đã bán:</b> @Model.DaBan sản phẩm</p>
        <p><b>Loại sản phẩm:</b> @Model.LoaiSanPham.TenLoaiSanPham</p>
        <p><b>Mô tả:</b> @Model.MoTa</p>

        @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMaSanPham = Model.MaSanPham, @strURL = Request.Url.ToString() }))
        {
            <b for="SoLuong">Số lượng:</b>
            <input id="SoLuong" name="iSoLuongMua" class="quantity-input" min="1" max="@Model.SoLuong" value="1" type="number">
            <br />
            <!-- Button -->
            <button type="submit" class="add-to-cart-btn">Thêm vào giỏ hàng</button>
        }
        </div>
</div>

