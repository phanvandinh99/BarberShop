@{
    Layout = "~/Views/Shared/MasterLayout.cshtml";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đặt Lịch</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: linear-gradient(rgba(0,0,0,0.5), #CC6633), url('@Url.Content("~/Images/pic-1.jpg")'); /* Đường dẫn ảnh nền */
            background-size: cover; /* Điều chỉnh kích thước ảnh nền */
            background-position: center; /* Căn giữa ảnh nền */
            background-repeat: no-repeat; /* Không lặp lại ảnh nền */
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh; /* Đặt chiều cao tối thiểu để phù hợp với layout */
            margin: 0;
            padding-top: 80px; /* Offset for the fixed header */
            padding-bottom: 60px; /* Offset for the fixed footer */
        }

        .container {
            border: none;
            border-radius: 10px;
            background-color: #CC6633;
            padding: 20px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.4);
            max-width: 400px;
            width: 100%;
            margin: auto; /* Center the container */
        }

        h1 {
            text-align: center;
            font-size: 24px;
            margin-bottom: 10px;
            color: white;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        label {
            margin-top: 10px;
            font-weight: bold;
            color: white;
        }

        input[type="text"],
        input[type="date"],
        input[type="tel"],
        input[type="time"],
        textarea,
        button {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border-radius: 4px;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        button {
            background-color: black;
            color: white;
            font-size: 16px;
            border: none;
            border-radius: 100px;
            cursor: pointer;
            margin-top: 15px;
        }

        button:hover {
            background-color: #660000;
        }

        p {
            text-align: center;
            color: white;
        }

        p a {
            color: #ffd700; /* Gold color for links */
            text-decoration: none;
        }

        p a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>ĐẶT LỊCH</h1>
        <p>Theo dõi <a href="#">Fanpage Facebook</a> | <a href="#">Instagram</a></p>
        <form>
            <label for="name">Tên khách hàng</label>
            <input type="text" id="name" name="name" placeholder="Tên khách hàng" required>

            <label for="date">Ngày đặt lịch</label>
            <input type="date" id="date" name="date" required>

            <label for="time">Thời gian dự kiến</label>
            <input type="time" id="time" name="time" required min="08:30" max="20:30">

            <label for="phone">Số điện thoại</label>
            <input type="tel" id="phone" name="phone" placeholder="Nhập số điện thoại" required>

            <label for="notes">Ghi chú</label>
            <textarea id="notes" name="notes" placeholder="Ghi chú"></textarea>

            <button type="submit">Gửi</button>
        </form>
    </div>

</body>
</html>
